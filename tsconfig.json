{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["ES2019"],
    "declaration": true,
    "outDir": "./lib/",
    "strict": true,
    "esModuleInterop": true,

    /* Advanced Options */
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]
  },
  "include": ["src/**/*.ts", "test/**/*.ts"]
}
